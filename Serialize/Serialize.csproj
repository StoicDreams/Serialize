<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Version>0.0.2</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>StoicDreamsSerialize</PackageId>
    <Authors>Erik Gassler</Authors>
    <Company>Stoic Dreams</Company>
    <Product>Stoic Dreams Serialize</Product>
    <Description>Simple abstract methods to convert between JSON and classes.</Description>
    <Copyright>Stoic Dreams</Copyright>
    <PackageProjectUrl>https://github.com/StoicDreams/Serialize</PackageProjectUrl>
    <RepositoryUrl>https://github.com/StoicDreams/Serialize</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <PackageLicenseUrl>https://github.com/StoicDreams/Serialize/blob/master/docs/LICENSE.md</PackageLicenseUrl>
    <PackageTags>JSON Serialize Serializer Deserializer</PackageTags>
    <PackageIconUrl>https://www.myfi.ws/img/sd/logoT600.png</PackageIconUrl>
    <AssemblyVersion>0.0.2.0</AssemblyVersion>
    <FileVersion>0.0.2.0</FileVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="12.0.1" />
  </ItemGroup>

</Project>
